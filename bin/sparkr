#!/usr/bin/env ruby

def find_lib_path
  path = __FILE__
  while File.symlink?(path)
    path = File.expand_path(File.readlink(path), File.dirname(path))
  end
  File.join(File.dirname(File.expand_path(path)), '..', 'lib')
end

$LOAD_PATH.unshift(find_lib_path)

require 'sparkr'
Sparkr::CLI.run(*ARGV)
